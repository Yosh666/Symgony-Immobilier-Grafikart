{% extends "base.html.twig" %}
{% block title property.title %}
{% block body %}
<div class="jumbotron">
    <div class="container">
        <div class="row">
                <div class="col-md-8">
                    {% if property.filename %}
                        <img src="/images/properties/{{property.filename}}" alt="card-img-top"style="width: 100%; height:auto;" >
                    {% else %}
                    <img src="/images/properties/empty.jpg" alt="card-img-top"style="width: 100%; height:auto;">
                                    
                    {% endif %}

                </div>

                <div class="col-md-4">
                    <h1> {{property.title}} </h1>
                    
                    
                    <h2> Surface: {{property.surface}} m²</h2>
                    <h2>nombre de pièces: {{property.room}} </h2>
                    
                    <div class="text-primary" style="font-size: 3rem; font-weight:bold">
                        {{property.formattedPrice }} €
                    </div>
                    <a href="#" class="btn btn-primary">Contacter l'agence</a>                
                </div>
        </div>
            
    </div>
</div>
<div class="container mt-4">
    
    

    <p >
        {{property.description|nl2br}}
    </p>
    <div class="row">
        <div class="col-md-8">
            <h2>Caractéristiques</h2>
            <table class="table table-striped">
                <tr>
                    <td>
                        Surface:
                    </td>
                    <td>{{property.surface}} m²</td>
                </tr>
                <tr>
                    <td>
                        nombre de pièces:
                    </td>
                    <td>
                        {{property.room}}
                    </td>
                </tr>
                <tr>
                    <td>
                        chambres:
                    </td>
                    <td>
                        {{property.bedroom}}
                    </td>
                </tr>
                <tr>
                    <td>
                        {% if property.floor==0 %}
                        rez de chaussée</td>
                    
                        {% else %}
                            étage n°= </td><td>{{property.floor}}</td>
                        {% endif %}
                   
                </tr>
                <tr>
                    <td>
                        Chauffage: 
                    </td>
                    <td>
                        {{property.heatType}}
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <h2>Spécificités</h2>
            <ul class="list-group">
                {% for option in property.options %}

                    <li class="list-group-item">
                        {{option.name}}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
 
{% endblock %}